  "framework": "php",
  "functions": {
    "api/**/*.php": {
      "runtime": "php-8.3"
    },
    "forms/**/*.php": {
      "runtime": "php-8.3"
    }
  },
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "MONGODB_DATABASE": "@mongodb_database"
  }
}
